<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GridLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:rowCount="2"
    android:orientation="horizontal"
    tools:context=".GridGallaryActivity"
    android:layout_gravity="fill_horizontal">

    <ImageView
        android:id="@+id/img1"
        android:layout_width="208dp"
        android:layout_height="150dp"
        android:src="@drawable/astronomy_black_wallpaper"
        android:padding="10dp"/>
    <ImageView
        android:id="@+id/img2"
        android:layout_width="208dp"
        android:layout_height="150dp"
        android:padding="10dp"
        android:src="@drawable/bit" />
    <ImageView
        android:id="@+id/img3"
        android:layout_width="208dp"
        android:layout_height="150dp"
        android:padding="10dp"
        android:src="@drawable/redcirclespace" />
    <ImageView
     android:id="@+id/img4"
        android:layout_width="208dp"
        android:layout_height="150dp"
        android:padding="10dp"
        android:src="@drawable/astronomy_explosion" />
    <ImageView
        android:id="@+id/img5"
        android:layout_width="208dp"
        android:layout_height="150dp"
        android:padding="10dp"
        android:src="@drawable/astronomy_earth" />
    <ImageView
        android:id="@+id/img6"
        android:layout_width="208dp"
        android:layout_height="150dp"
        android:padding="10dp"
        android:src="@drawable/astronomy_backlit_blue" />
    <ImageView
        android:id="@+id/img7"
        android:layout_width="208dp"
        android:layout_height="150dp"
        android:padding="10dp"
        android:src="@drawable/artificial_intelligence_astronomy_machine" />
    <ImageView
        android:id="@+id/img8"
        android:layout_width="208dp"
        android:layout_height="150dp"
        android:padding="10dp"
        android:src="@drawable/astronomy2" />
</GridLayout>
