<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:background="@drawable/list_selector"
    tools:context=".EmployeeListviewActivity">

    <LinearLayout
        android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:padding="3dp">

        <ImageView
            android:id="@+id/img_employeeimage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="5dp"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_employeename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="@+id/thumbnail"
        android:layout_toEndOf="@+id/thumbnail"
        android:layout_toRightOf="@+id/thumbnail"
        android:fontFamily="sans-serif"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txt_employeenumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_employeename"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@+id/thumbnail"
        android:layout_toRightOf="@+id/thumbnail"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/black"
        android:textSize="15sp"
        tools:ignore="RtlHardcoded" />

</RelativeLayout>